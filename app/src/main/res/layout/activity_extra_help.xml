<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/skypixlr2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.darren.darren.smokewise.ExtraHelp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/linearLayoutExtraHelp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/extra_help"
                android:id="@+id/textViewExtraHelp"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"

                android:id="@+id/linearLayout">

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="0.5"
                    android:id="@+id/ashImage"
                    android:src="@drawable/ash_t"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/roundcorner"
                    android:padding="10dp"
                    />

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="0.5"
                    android:id="@+id/heartFoundationImage"
                    android:src="@drawable/heartfoundation"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="0.5"
                    android:id="@+id/quitlineImage"
                    android:src="@drawable/quitline_t"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/scrollView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="134dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/extra_help_nicotine"
                    android:id="@+id/textViewNicotine"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/type_of_treatment"
                    android:id="@+id/textView"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNicotineType"
                    android:hint="@string/type_of_treatment_edittext" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/treatment_duration"
                    android:id="@+id/textViewNicotineFrequency"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                <EditText
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextNicotineFrequency"
                    android:hint="@string/number_of" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/days"
                        android:id="@+id/textView2" />


                </LinearLayout>
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set"
                    android:id="@+id/buttonSet"
                    android:background="@drawable/roundcorner"
                    android:padding="10dp"
                    android:layout_gravity="end" />

                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textViewNicotineP2"
                    android:text="@string/extra_help_nicotine_p2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/extra_help_disclaimer"
                    android:id="@+id/textViewNicotineP3" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
