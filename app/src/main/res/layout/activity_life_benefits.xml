<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/relativeLayout2"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/skypixlr2"

    tools:context="com.darren.darren.smokewise.LifeBenefits.LifeBenefits">



    <LinearLayout
        android:id="@+id/calendarLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/select_date_quit_smoking"
            android:id="@+id/textViewCalendarTitle"
            android:textStyle="bold" />

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="401dp"
            android:id="@+id/calendarView2"
            android:visibility="visible"

            android:background="#80FFFFFF" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:id="@+id/buttonDone"

            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:weightSum="1.0"

        >



        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/calendarButton"
            android:src="@drawable/ic_calendar_black_48dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"
            android:background="@drawable/roundcorner"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/moneyButton"
            android:src="@drawable/ic_currency_usd_black_48dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"
            android:background="@drawable/roundcorner"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutTimeMoney"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/reselect_date"
            android:textStyle="bold"
            android:id="@+id/textViewCalendar"
            android:layout_weight="0.5"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/money"
            android:textStyle="bold"
            android:id="@+id/textViewMoney"
            android:layout_weight="0.5"
            android:gravity="center"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/linearLayoutTimeMoney"
        android:weightSum="1.0">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/healthButton"
            android:src="@drawable/ic_heart_pulse_black_48dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"
            android:background="@drawable/roundcorner"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:src="@drawable/ic_clock_black_48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/timeButton"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"
            android:background="@drawable/roundcorner"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutHealthCalendar"
        android:layout_below="@+id/linearLayout4"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/health"
            android:textStyle="bold"
            android:id="@+id/textViewHealth"
            android:layout_weight="0.5"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/time"
            android:textStyle="bold"
            android:id="@+id/textViewTime"
            android:layout_weight="0.5"
            android:gravity="center"
            />



    </LinearLayout>

</RelativeLayout>
