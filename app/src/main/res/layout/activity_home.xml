<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/skypixlr2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.darren.darren.smokewise.Home"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/homeBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/homeLinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="140dp"

                android:orientation="horizontal"
                android:weightSum="1.0">

                <ImageButton
                    android:id="@+id/buttonLifeBenefits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:padding="60dp"
                    android:src="@drawable/ic_hospital_black_48dp"/>

                <ImageButton
                    android:id="@+id/buttonMotivation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:padding="60dp"
                    android:src="@drawable/ic_dumbbell_black_48dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLifeBenefitsMotivation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >

                <TextView
                    android:id="@+id/textViewLifeBenefits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/life_benefits"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textViewMotivation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/motivation"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeLinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    >

                    <ImageButton
                        android:id="@+id/buttonFacebook"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/ic_facebook_box_black_48dp"/>

                    <com.facebook.share.widget.LikeView
                        android:id="@+id/likeView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        />


                </FrameLayout>

                <ImageButton
                    android:id="@+id/buttonExtraHelp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/ic_group_add_black_48dp_2"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutFacebookExtraHelp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >

                <TextView
                    android:id="@+id/textViewFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/facebook"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textViewExtraHelp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/extrahelp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeLinearLayout3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >

                <ImageButton
                    android:id="@+id/buttonVideo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/ic_video_library_black_48dp"
                    android:text="Upload Video"/>

                <ImageButton
                    android:id="@+id/buttonSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/ic_account_circle_black_48dp"
                    android:text="Settings"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutVideoSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >

                <TextView
                    android:id="@+id/textViewVideo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/video"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textViewSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/account"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
