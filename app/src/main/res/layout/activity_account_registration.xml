<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/skypixlr2"
    tools:context="com.darren.darren.smokewise.AccountRegistration"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewAccountRegistration">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <EditText
                android:id="@+id/editTextName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/input_register_bg"
                android:hint="@string/name"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint" />


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/input_register_bg"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"
/>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/input_register_bg"
                android:layout_marginBottom="10dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint" />

            <EditText
                android:id="@+id/editTextConfirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/input_register_bg"
                android:layout_marginBottom="10dp"
                android:hint="@string/confirmPassword"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"
                 />

            <EditText
                android:id="@+id/editTextDateQuit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/input_register_bg"
                android:layout_marginBottom="10dp"
                android:hint="@string/date_quit_registration"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="@string/age"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@color/input_register_bg"
                android:id="@+id/editTextAge"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gender"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@color/input_register_bg"
                android:id="@+id/editTextGender"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@color/input_register_bg"
                android:hint="@string/dailySmokes"
                android:id="@+id/editTextDailySmokes"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@color/input_register_bg"
                android:hint="@string/stopAttempts"
                android:id="@+id/editTextStopAttempts"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ethnicity"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@color/input_register_bg"
                android:id="@+id/editTextEthnicity"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/occupation"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@color/input_register_bg"
                android:id="@+id/editTextOccupation"
                android:singleLine="true"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:id="@+id/buttonRegister"
                android:layout_gravity="center"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
