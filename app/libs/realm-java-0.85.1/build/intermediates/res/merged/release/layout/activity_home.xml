<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.darren.darren.smokewise.Home">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/homeLinearLayout1"
        android:weightSum="1.0">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Life Benefits"
            android:id="@+id/buttonLifeBenefits"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonMotivation"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Motivation"
            android:id="@+id/buttonMotivation"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/homeLinearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/homeLinearLayout2"
        android:weightSum="1.0">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Facebook"
            android:id="@+id/buttonFacebook"
            android:layout_below="@+id/buttonLifeBenefits"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Extra Help"
            android:id="@+id/buttonExtraHelp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonFacebook"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/homeLinearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1.0"
        android:id="@+id/homeLinearLayout3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Upload Video"
            android:id="@+id/buttonVideo"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Settings"
            android:id="@+id/buttonSettings"
            android:layout_weight="0.5"/>
    </LinearLayout>

</RelativeLayout>
