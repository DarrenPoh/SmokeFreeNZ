<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/relativeLayout2"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.darren.darren.smokewise.LifeBenefits">

    <LinearLayout
        android:id="@+id/calendarLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CalendarView
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView2"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:weightSum="1.0"

        >

        <ImageButton
            android:src="@drawable/time"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:id="@+id/timeButton"
            android:layout_gravity="bottom"
            android:layout_weight="0.50" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:id="@+id/moneyButton"
            android:src="@drawable/money"
            android:layout_gravity="bottom"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutTimeMoney"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time"
            android:id="@+id/textViewTime"
            android:layout_weight="0.5"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Money"
            android:id="@+id/textViewMoney"
            android:layout_weight="0.5"
            android:gravity="center"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTimeMoney"
        android:weightSum="1.0">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:id="@+id/healthButton"
            android:src="@drawable/health"
            android:layout_gravity="bottom"
            android:layout_weight="0.50" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:id="@+id/calendarButton"
            android:src="@drawable/calendar"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutHealthCalendar"
        android:layout_below="@+id/linearLayout4"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Health"
            android:id="@+id/textViewHealth"
            android:layout_weight="0.5"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reselect Date"
            android:id="@+id/textViewCalendar"
            android:layout_weight="0.5"
            android:gravity="center"
            />



    </LinearLayout>

</RelativeLayout>
